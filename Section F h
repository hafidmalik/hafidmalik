#include<iostream>
#include<cmath>
using namespace std;
int main()
{

	int hr;
	
	cout<<"Enter the working hour of a worker : ";
	cin>>hr;
	
	if(hr>=2 && hr<3)
		cout<<"\n\nThe worker is highly efficient";
	if(hr>=3 && hr<4)
		cout<<"\n\nThe worker is ordered to improve is speed.";
	if(hr>=4 && hr<=5)
		cout<<"\n\nThe worker will be given training to improve his/her speed.";
	if(hr>5)
		cout<<"\n\n The worker will leave the company.";
	return 0;
}
